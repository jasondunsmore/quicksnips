# Grabs the Apache log files and computes the difference in size for each one.
# This will give you an idea of which virtual hosts are seeing the most activity.
# Useful if a server is overloaded and fullstatus is slow or inaccessible.
# Do a sanity check on the access log names, this may need to be edited to
# accomodate logfiles withouth access_log in the name.

logs=$( lsof -p `cat /var/run/httpd.pid` |egrep "access.log" |awk '{if ($7 > 0) print $9}' ); \
rm -f /tmp/firstcheck; for x in $logs; do du -s $x >>/tmp/firstcheck; done; \
echo Waiting for 30 seconds for traffic to be logged...; \
sleep 30; \
rm -f /tmp/secondcheck; for x in $logs; do du -s $x >>/tmp/secondcheck; done; \
sed -i 's/[ \t]/ /' /tmp/firstcheck; \
sed -i 's/[ \t]/ /' /tmp/secondcheck; \
sort -k 2 /tmp/firstcheck >/tmp/firstchecknew; \
sort -k 2 /tmp/secondcheck >/tmp/secondchecknew; \
join -j 2 /tmp/firstchecknew /tmp/secondchecknew |grep -v ^0 |awk '{print $3-$2, $1}' |grep -v ^0 |sort -rn |uniq;
